<!DOCTYPE html>
<html>
<head>
  <title>Scribe</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="hero-unit">
<%= render 'navbar' %>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%# if current_user %>
<%= link_to "Home", posts_path %><br>
<%# end %>
<%= yield %>
</div>
</body>
</html>
